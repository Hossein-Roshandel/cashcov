{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "docker-compose: up",
            "type": "shell",
            "command": "docker-compose",
            "args": [
                "-f",
                ".devcontainer/docker-compose.yml",
                "up",
                "-d"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "docker-compose: down",
            "type": "shell",
            "command": "docker-compose",
            "args": [
                "-f",
                ".devcontainer/docker-compose.yml",
                "down"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "make test",
            "type": "shell",
            "command": "make",
            "args": [
                "test"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": "^(.+):(\\d+):\\s+(.*)$",
                            "file": 1,
                            "line": 2,
                            "message": 3
                        }
                    ],
                    "owner": "go",
                    "source": "go"
                }
            ]
        },
        {
            "label": "make lint",
            "type": "shell",
            "command": "make",
            "args": [
                "lint"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": "^(.+):(\\d+):\\s+(.*)$",
                            "file": 1,
                            "line": 2,
                            "message": 3
                        }
                    ],
                    "owner": "golangci-lint",
                    "source": "golangci-lint"
                }
            ]
        },
        {
            "label": "make fmt",
            "type": "shell",
            "command": "make",
            "args": [
                "fmt"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}